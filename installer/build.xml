            <config
                    outfile="${exe.name}"
                    icon="images/nextick.ico"
                    headertype="gui"
                    jarpath="nextick-v2rc.jar"
                    customProcName="true"
                    stayAlive="false">
                <jre minVersion="1.6.0"/>
                <splash file="images/nextick.bmp"/>
            </config>
        </launch4j>
    </target> -->
</project>
