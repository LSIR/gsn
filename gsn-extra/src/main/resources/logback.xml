<configuration>
  <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
    <FileNamePattern>logs/gsn$i.log</FileNamePattern>
    <Append>true</Append>
    <encoder>
      <pattern>%-6p[%d] [%t] (%13F:%L) %3x - %m%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>DEBUG</level>
    </filter>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy"/>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>100MB</MaxFileSize>
    </triggeringPolicy>
  </appender>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-6p[%d] [%t] (%13F:%L) %3x - %m%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>DEBUG</level>
    </filter>
  </appender>
  <logger name="com.mchange" level="WARN"/>
  <logger name="org.apache.jasper" level="WARN"/>
  <logger name="gsn.http.restapi" level="DEBUG"/>
  <logger name="httpclient.wire" level="WARN"/>
  <logger name="net.sf.jasperreports" level="WARN"/>
  <logger name="org.apache" level="WARN"/>
  <logger name="org.apache.commons.httpclient" level="WARN"/>
  <logger name="org.apache.axis.enterprise" level="FATAL"/>
  <logger name="httpclient.wire.header" level="WARN"/>
  <logger name="org.eclipse.jetty" level="WARN"/>
  <root level="INFO">
    <appender-ref ref="file"/>
    <appender-ref ref="console"/>
  </root>
</configuration>