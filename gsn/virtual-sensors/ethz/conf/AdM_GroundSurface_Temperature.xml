<virtual-sensor name="AdM_GroundSurface_Temperature" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TEMPERATURE_5CM_t1" type="VARCHAR(30)" unit="°C"/>
            <field name="TEMPERATURE_5CM_t2" type="VARCHAR(30)" unit="°C"/>
            <field name="TEMPERATURE_10CM" type="VARCHAR(30)" unit="°C"/>
            <field name="TEMPERATURE_20CM" type="VARCHAR(30)" unit="°C"/>
            <field name="TEMPERATURE_30CM" type="VARCHAR(30)" unit="°C"/>
            <field name="TEMPERATURE_35CM" type="VARCHAR(30)" unit="°C"/>
            <field name="TEMPERATURE_50CM" type="VARCHAR(30)" unit="°C"/>
            <field name="TEMPERATURE_60CM" type="VARCHAR(30)" unit="°C"/>
            <field name="TEMPERATURE_85CM" type="VARCHAR(30)" unit="°C"/>
            <field name="TEMPERATURE_100CM" type="VARCHAR(30)" unit="°C"/>
        </output-structure>
    </processing-class>
    <description>Ground surface temperatures from AdM deployment converted</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
      <stream name="data0">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from AdM_Temperature__nctn</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select timed, POSITION, DEVICE_ID, GENERATION_TIME,
                NCTN_T2 as TEMPERATURE_5CM_t1
                from wrapper </query>
            </source>
            <query> select * from source </query>
      </stream>
    </streams>
</virtual-sensor>
