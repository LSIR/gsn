<virtual-sensor name="Jungfraujoch_Mapping_Geo" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
       	<web-input password="test">
         	<command name="geo">
                <field name="position" type="*text">the position to be mapped</field>
                <field name="longitude" type="*text">the longitude of the mapping</field>
                <field name="latitude" type="*text">the latitude of the mapping</field>
                <field name="altitude" type="*text">the altitude of the mapping</field>
                <field name="comment" type="text">optional comment</field>
        	</command>
   		</web-input>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="LONGITUDE" type="DOUBLE" />
            <field name="LATITUDE" type="DOUBLE" />
            <field name="ALTITUDE" type="DOUBLE" />
            <field name="COMMENT" type="VARCHAR(255)" />
        </output-structure>
    </processing-class>
    <description>Geo Mapping from Jungfraujoch deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage user="permasense_pbl" password="CHANGEME" driver="com.mysql.jdbc.Driver" url="jdbc:mysql://lochmatter.ee.ethz.ch/permasense_pbl_backuped?autoReconnect=true&amp;profilerEventHandler=gsn.wrappers.MySQLProfilerEventHandler&amp;profileSQL=true&amp;logSlowQueries=true"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="data-mapping">
                    <predicate key="mapping-type">geo</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
