<virtual-sensor name="Saastal_GPS_RAW__tobinary__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.GPSSvToRawBinary</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="buffer_size_in_days">7</param>
        </init-params>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="GPS_UNIXTIME" type="BIGINT" unit="unixtime" index="true" />
            
			<field name="DEVICE_TYPE" type="VARCHAR(16)" />
            <field name="GPS_RAW_DATA_VERSION" type="SMALLINT"/>
		    <field name="GPS_SATS" type="INTEGER"/>
		    <field name="GPS_MISSING_SV" type="INTEGER"/>
            <field name="GPS_RAW_DATA" type="binary"/>
		    <field name="CURRENT_DATA_BUFFER_SIZE" type="INTEGER"/>
		    <field name="OLD_DATA_BUFFER_SIZE" type="INTEGER"/>
		    <field name="TOTAL_NUMBER_OF_BUFFERS" type="INTEGER"/>
            
        </output-structure>
    </processing-class>
    <description>back converted GPS RAW messages from Saastal deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query"> select * from Saastal_Dozer_WgpsSv__conv</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select *, 'wireless-gps' as DEVICE_TYPE from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
