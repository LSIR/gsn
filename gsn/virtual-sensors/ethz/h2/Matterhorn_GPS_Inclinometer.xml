<virtual-sensor name="Matterhorn_GPS_Inclinometer" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="GSN_TIMESTAMP" type="BIGINT" unit="unixtime" index="true" />
			<field name="SENSORTYPE" type="VARCHAR(16)" />

            <field name="INCLINOMETER_X" type="VARCHAR(30)" unit="°" />
            <field name="INCLINOMETER_Y" type="VARCHAR(30)" unit="°" />
        </output-structure>
    </processing-class>
    <description>Inclinometer data from all GPS sensors</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data0">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from Matterhorn_GPS_Logger__status</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select GSN_TIMESTAMP, POSITION, DEVICE_ID, GENERATION_TIME, TIMESTAMP, DEVICE_TYPE as SENSORTYPE, INCLINOMETER_X, INCLINOMETER_Y from wrapper</query>
            </source>
            <query> select * from source </query>
        </stream>
        <stream name="data1">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="local">
                    <predicate key="query">select * from Matterhorn_Dozer_WgpsStatus__conv</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select timed as GSN_TIMESTAMP, POSITION, DEVICE_ID, GENERATION_TIME, TIMESTAMP, SENSORTYPE, INCLINOMETER_X, INCLINOMETER_Y from wrapper where SAM7_VALID = 1</query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
