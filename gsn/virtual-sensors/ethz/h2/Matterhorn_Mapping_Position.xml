<virtual-sensor name="Matterhorn_Mapping_Position" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
       	<web-input password="test">
         	<command name="position">
                <field name="device_id" type="*text">the device_id to be mapped</field>
                <field name="device_type" type="select:please choose,0|SIB TinyNode,1|GPS TinyNode,2|PowerSwitch TN,3|BaseStation,4|GPS CoreStation,5|CamZilla CoreStation,6|GPS Logger,7|Webcam,8|AE TinyNode,9|Outback Mate 3,10|IMIS Weather Station,11|GPS L2,12">select white balance</field>
                <field name="begin" type="date">the starting point of the mapping in UTC</field>
                <field name="end" type="date">the end point of the mapping in UTC</field>
                <field name="position" type="*text">the position the device_id should be mapped to</field>
                <field name="comment" type="text">optional comment</field>
        	</command>
   		</web-input>
        <output-structure>
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="DEVICE_TYPE" type="SMALLINT" />
            <field name="BEGIN" type="BIGINT" unit="unixtime" />
            <field name="END" type="BIGINT" unit="unixtime" />
            <field name="POSITION" type="INTEGER" />
            <field name="COMMENT" type="VARCHAR(255)" />
        </output-structure>
    </processing-class>
    <description>Position Mapping from Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage user="permasense_pbl" password="CHANGEME" driver="com.mysql.jdbc.Driver" url="jdbc:mysql://taugwalder.ee.ethz.ch/permasense_pbl_backuped?autoReconnect=true&amp;profilerEventHandler=gsn.wrappers.MySQLProfilerEventHandler&amp;profileSQL=true&amp;logSlowQueries=true"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="data-mapping">
                    <predicate key="mapping-type">position</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
