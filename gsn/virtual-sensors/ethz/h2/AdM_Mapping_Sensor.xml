<virtual-sensor name="AdM_Mapping_Sensor" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
       	<web-input password="test">
         	<command name="sensor">
                <field name="position" type="*text">the position to be mapped</field>
                <field name="begin" type="date">the starting point of the mapping in UTC</field>
                <field name="end" type="date">the end point of the mapping in UTC</field>
                <field name="sensortype" type="*select:adccomdiff_cnnn|adccomdiff_ccnn|adccomdiff_ccct|adccomdiff_ncnn|adccomdiff_ntnn|adccomdiff_nttn|adccomdiff_tttn|adccomdiff_tttt|adccomdiff_nctn|adccomdiff_nctc|adccomdiff_nctt|adccomdiff_tctc|adccomdiff_nepn|adccomdiff_sp|adcmux_sr|adcmux_tc|adcmux_tm|digital_ps|dm|nodehealth_sht11|nodehealth_sht21|serialid">the sensortype of the mapping</field>
                <field name="sensortype_args" type="text">the sensortype argument of the mapping</field>
                <field name="comment" type="text">optional comment</field>
        	</command>
   		</web-input>
        <output-structure>
            <field name="POSITION" type="INTEGER" />
            <field name="BEGIN" type="BIGINT" unit="unixtime" />
            <field name="END" type="BIGINT" unit="unixtime" />
            <field name="SENSORTYPE" type="VARCHAR(32)" />
            <field name="SENSORTYPE_ARGS" type="BIGINT" />
            <field name="COMMENT" type="VARCHAR(255)" />
        </output-structure>
    </processing-class>
    <description>Sensor Mapping from AdM deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage user="permasense_pbl" password="CHANGEME" driver="com.mysql.jdbc.Driver" url="jdbc:mysql://taugwalder.ee.ethz.ch/permasense_pbl_backuped?autoReconnect=true&amp;profilerEventHandler=gsn.wrappers.MySQLProfilerEventHandler&amp;profileSQL=true&amp;logSlowQueries=true"/>
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="data-mapping">
                    <predicate key="mapping-type">sensor</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
