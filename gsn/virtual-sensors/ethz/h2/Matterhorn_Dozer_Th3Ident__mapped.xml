<virtual-sensor name="Matterhorn_Dozer_Th3Ident__mapped" priority="10" >
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensorPermasense</class-name>
        <unique-timestamps>false</unique-timestamps>
        <init-params>
            <param name="position_mapping" />
            <param name="sensortype_mapping" />
        </init-params>        
        <output-structure>
            <field name="POSITION" type="INTEGER" index="true" />
            <field name="DEVICE_ID" type="INTEGER" />
            <field name="GENERATION_TIME" type="BIGINT" unit="unixtime" index="true"/>
            <field name="TIMESTAMP" type="BIGINT" unit="unixtime"/>
            <field name="SENSORTYPE" type="VARCHAR(100)" />
            <field name="SENSORTYPE_SERIALID" type="BIGINT" />
            <field name="HEADER_SEQNR" type="INTEGER" />
            <field name="HEADER_ORIGINATORID" type="INTEGER" />
            <field name="HEADER_ATIME" type="INTEGER" unit="s"/>
            <field name="PAYLOAD_FIRMWAREVERSION0" type="TINYINT" />
            <field name="PAYLOAD_FIRMWAREVERSION1" type="TINYINT" />
            <field name="PAYLOAD_FIRMWAREVERSION2" type="TINYINT" />
            <field name="PAYLOAD_SERIAL0" type="TINYINT" />
            <field name="PAYLOAD_SERIAL1" type="TINYINT" />
            <field name="PAYLOAD_SERIAL2" type="TINYINT" />
            <field name="PAYLOAD_SERIAL3" type="TINYINT" />
            <field name="PAYLOAD_SERIAL4" type="TINYINT" />
            <field name="PAYLOAD_SERIAL5" type="TINYINT" />
            <field name="PAYLOAD_SERIAL6" type="TINYINT" />
            <field name="PAYLOAD_SERIAL7" type="TINYINT" />            
        </output-structure>
    </processing-class>
    <description>Dozer messages (DozerTh3IdentMsg) from Matterhorn deployment</description>
    <life-cycle pool-size="10" />
    <addressing />
    <storage />
    <streams>
        <stream name="data">
            <source alias="source" storage-size="1" sampling-rate="1">
                <address wrapper="remote-rest">
                    <predicate key="query"> select * from Matterhorn_Dozer_Th3Ident</predicate>
                    <predicate key="remote-contact-point">http://pvt.permasense.ethz.ch/streaming/</predicate>
                    <predicate key="start-time">continue</predicate>
                </address>
                <query> select * from wrapper </query>
            </source>
            <query> select * from source </query>
        </stream>
    </streams>
</virtual-sensor>
