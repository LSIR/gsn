<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:android1="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:textColor="#000000" >

            <TableRow
                android:id="@+id/tableRow_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dip" >

                <TextView
                    android1:id="@+id/textView_vs"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android:layout_span="2"
                    android:gravity="center"
                    android1:text="Pull data from GSN"
                    android1:textAppearance="?android:attr/textAppearanceMedium"
                    android1:textColor="#000000" />
            </TableRow>

            <View
                android1:layout_width="wrap_content"
                android:layout_height="2dip"
                android:background="#61a7db" />

            <!-- ROW SERVER NAME -->

            <TableRow
                android:id="@+id/tableRow_severName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" >

                <TextView
                    android1:id="@+id/textView_serverName"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="GSN Server"
                    android1:textAppearance="?android:attr/textAppearanceSmall"
                    android1:textColor="#000000" />

                <!--
                 <Spinner
                android1:id="@+id/spinner_server_name"
                style="@layout/spinner_item"
                android1:layout_width="190dip"
                android1:layout_height="wrap_content"
                android1:textColor="#000000" />
                -->

                <EditText
                    android:id="@+id/editText_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:inputType="text"
                    android:textColor="#000000"
                    android1:text="@string/gsnserver" >

                    <requestFocus android1:layout_width="wrap_content" />
                </EditText>

                <ImageButton
                    android:id="@+id/select_server_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="select_server"
                    android:src="@drawable/track_dropdown_arrow_dark" />
            </TableRow>

            <!-- ROW VS NAME -->

            <TableRow
                android:id="@+id/tableRow_vsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" >

                <TextView
                    android1:id="@+id/textView_vsName"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="Select VS"
                    android1:textAppearance="?android:attr/textAppearanceSmall"
                    android1:textColor="#000000" />

                <Spinner
                    android1:id="@+id/spinner_pull_vsname"
                    style="@layout/spinner_item"
                    android1:layout_width="190dip"
                    android1:layout_height="wrap_content"
                    android1:textColor="#000000" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow_RangeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" >

                <TextView
                    android1:id="@+id/textView_RangeType"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="Range"
                    android1:textAppearance="?android:attr/textAppearanceSmall"
                    android1:textColor="#000000" />

                <Spinner
                    android1:id="@+id/spinner_range_type"
                    style="@layout/spinner_item"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:entries="@array/range_type"
                    android1:textColor="#000000" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow_numLatest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip" >

                <TextView
                    android1:id="@+id/textView_numLatest"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text=" # latest data"
                    android1:textAppearance="?android:attr/textAppearanceSmall"
                    android1:textColor="#000000" />

                <EditText
                    android:id="@+id/editText_numLatest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:inputType="number"
                    android:textColor="#000000"
                    android1:text="10" >
                </EditText>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dip" >

                <ScrollView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_span="2" >

                    <TextView
                        android1:id="@+id/txbPulledData"
                        android1:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android1:textColor="#000000" />
                </ScrollView>
            </TableRow>
        </TableLayout>
    </ScrollView>

   <!-- <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />  -->

</RelativeLayout>